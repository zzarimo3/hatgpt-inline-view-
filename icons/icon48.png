<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
  <!-- Background -->
  <rect width="48" height="48" rx="8" fill="#10a37f" />
  
  <!-- Chat bubble left (question) -->
  <rect x="6" y="12" width="15" height="9" rx="3" fill="white" />
  
  <!-- Chat bubble right (answer) -->
  <rect x="27" y="12" width="15" height="9" rx="3" fill="#e7f7f4" />
  
  <!-- Inline connection line -->
  <line x1="21" y1="16.5" x2="27" y2="16.5" stroke="white" stroke-width="2" />
  
  <!-- Second row of bubbles -->
  <rect x="6" y="27" width="15" height="9" rx="3" fill="white" />
  <rect x="27" y="27" width="15" height="9" rx="3" fill="#e7f7f4" />
  <line x1="21" y1="31.5" x2="27" y2="31.5" stroke="white" stroke-width="2" />
</svg>
